  <style>
    body::-webkit-scrollbar {
      display: none;
    }

    body {
      /* background-color: rgb(4, 7, 27); */
      background-image: linear-gradient(to right, rgb(4, 7, 27) 50%, rgb(78, 126, 151));

      /* overflow-y: hidden; Hide vertical scrollbar */
