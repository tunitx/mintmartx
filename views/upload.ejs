<script>

  // JavaScript to hide the loader after page load
  document.onreadystatechange = function () {
    var loader = document.querySelector('.loader-container');

    if (document.readyState !== 'complete') {
      loader.style.opacity = 1; // Show the loader while the page is loading
    } else {
      // Hide the loader with a delay for a smooth fade-out effect
      setTimeout(function () {
        loader.style.opacity = 0;
        setTimeout(function () {
          loader.style.display = 'none'; // After fading out, hide the loader completely
        }, 500); // Match the transition duration (0.5s in this case)
      }, 1000); // Delay for 1 second (you can adjust this value as needed)
    }
  };
</script>
